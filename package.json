{
  "name": "mapeo-desktop-next",
  "productName": "mapeo-desktop-next",
  "version": "1.0.0",
  "description": "The next version of Mapeo Desktop",
  "keywords": [],
  "author": {
    "name": "Andrew Chou",
    "email": "andrewchou@fastmail.com"
  },
  "license": "MIT",
  "main": ".vite/build/index.js",
  "scripts": {
    "postinstall": "npm run patch-package",
    "prestart": "npm run build:translations",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "format": "prettier . --write",
    "patch-package": "patch-package",
    "tsc:main": "tsc -p src/main/tsconfig.json",
    "tsc:service": "tsc -p src/service/tsconfig.json",
    "tsc:preload": "tsc -p src/preload/tsconfig.json",
    "tsc:renderer": "tsc -p src/renderer/tsconfig.json",
    "tsc:all": "npm-run-all -p -c tsc:main tsc:service tsc:preload tsc:renderer",
    "intl:extract:main": "formatjs extract 'src/main/**/*.{js,ts}' --ignore='**/*.d.ts' --format crowdin --out-file messages/main/en.json",
    "intl:extract:renderer": "formatjs extract 'src/renderer/**/*.{js,jsx,ts,tsx}' --ignore='**/*.d.ts' --format crowdin --out-file messages/renderer/en.json",
    "intl:extract": "npm-run-all --parallel intl:extract:*",
    "intl:compile:main": "formatjs compile-folder messages/main translations/main --format crowdin",
    "intl:compile:renderer": "formatjs compile-folder messages/renderer translations/renderer --format crowdin",
    "intl:compile": "npm-run-all --parallel intl:compile:*",
    "build:translations": "npm run intl:extract && npm run intl:compile",
    "prepare": "husky"
  },
  "lint-staged": {
    "*": [
      "prettier --write"
    ],
    "src/main/**/*.{js,jsx,ts,tsx}": "npm run intl:extract:main",
    "src/renderer/**/*.{js,jsx,ts,tsx}": "npm run intl:extract:renderer"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.2.1",
    "@electron-forge/maker-deb": "^6.2.1",
    "@electron-forge/maker-rpm": "^6.2.1",
    "@electron-forge/maker-squirrel": "^6.2.1",
    "@electron-forge/maker-zip": "^6.2.1",
    "@electron-forge/plugin-auto-unpack-natives": "^6.2.1",
    "@electron-forge/plugin-vite": "^6.2.1",
    "@formatjs/cli": "^6.1.3",
    "@ianvs/prettier-plugin-sort-imports": "^4.2.1",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/node": "^20.3.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.0.1",
    "electron": "25.2.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.5",
    "npm-run-all": "^4.1.5",
    "patch-package": "^8.0.0",
    "prettier": "^3.3.0",
    "typescript": "^5.4.5",
    "vite-plugin-node-polyfills": "^0.9.0"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.40.0",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^8.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-intl": "^6.6.8",
    "rpc-reflector": "^1.3.7",
    "tiny-typed-emitter": "^2.1.0"
  }
}
